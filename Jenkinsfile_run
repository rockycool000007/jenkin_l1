pipeline {
    agent any
    parameters{
      string(name: 'buildNumber', defaultValue: '', description: 'Please Build Number')
    }
    stages {
        stage("Retrive Artifact") {
            steps {
                copyArtifacts(projectName: 'compile-java-program', selector:[specific: params.buildNumber]);
            }
        }  
        stage("Run the code") {
            steps {
                sh "'java' JavaProgram"
            }
        }    
    }
    post {
        always {
            cleanWs()
        }
    }
}